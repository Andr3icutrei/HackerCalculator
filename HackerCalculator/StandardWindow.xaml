<Window x:Class="HackerCalculator.StandardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HackerCalculator"
        mc:Ignorable="d"
        Title="CristiPopesco" Height="535" Width="336">
    <Window.DataContext>
        <local:ButtonsStandardViewModel/>
    </Window.DataContext>

    <Window.CommandBindings>
        <CommandBinding Command="Cut" Executed="Cut_Executed" CanExecute="Edit_CanExecute"/>
        <CommandBinding Command="Copy" Executed="Copy_Executed" CanExecute="Edit_CanExecute"/>
        <CommandBinding Command="Paste" Executed="Paste_Executed" CanExecute="Paste_CanExecute"/>
    </Window.CommandBindings>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Foreground" Value="#FF20C20E" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="BorderBrush" Value="#FF20C20E" />
            <Setter Property="Background" Value="Black" />
        </Style>
        <Style TargetType="TextBox" x:Key="ComboBoxTextBoxStyle">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="#FF20C20E" />
            <Setter Property="BorderBrush" Value="#FF20C20E" />
        </Style>
    </Window.Resources>

    <DockPanel Background="Black">
        <Menu DockPanel.Dock="Top" Background="Black" Foreground="#FF20C20E" BorderBrush="#FF20C20E" BorderThickness="1">
            <MenuItem Header="File" Foreground="#FF20C20E">
                <MenuItem Header="Cut" Command="Cut" Foreground="#FF20C20E"/>
                <MenuItem Header="Copy" Command="Copy" Foreground="#FF20C20E"/>
                <MenuItem Header="Paste" Command="Paste" Foreground="#FF20C20E"/>
            </MenuItem>
            <MenuItem Header="Help" Foreground="#FF20C20E">
                <MenuItem Header="About me" Click="About_Click" Foreground="#FF20C20E"/>
            </MenuItem>
            <MenuItem Header="Switch to Programmer" Click="ChangeWindow_Click" Foreground="#FF20C20E"/>
        </Menu>

        <Grid>
            <Grid VerticalAlignment="Top" Margin="0,200,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="MC" Grid.Column="0" Margin="5" Click="ButtonMC_Click"/>
                <Button Content="MR" Grid.Column="1" Margin="5" Click="ButtonMR_Click"/>
                <Button Content="M+" Grid.Column="2" Margin="5" Click="ButtonMAdd_Click"/>
                <Button Content="M-" Grid.Column="3" Margin="5" Click="ButtonMSubstract_Click"/>
                <Button Content="MS" Grid.Column="4" Margin="5" Click="ButtonMS_Click"/>
                <ComboBox ItemsSource="{Binding MemoryResults}" 
                  SelectedItem="{Binding SelectedResult, Mode=TwoWay}" 
                  Grid.Column="5" Margin="5" 
                  Text="M" 
                  Foreground="#FF20C20E" 
                  Background="Black" 
                  BorderBrush="#FF20C20E" 
                  FontSize="20" 
                  IsEditable="True" 
                  IsReadOnly="True">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="#FF20C20E" Background="Black">
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <Grid Margin="0,243,0,0">
                <ItemsControl Name="MatrixButtons" ItemsSource="{Binding ButtonsContent}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Grid.Column" Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" 
                                    Click="Button_Click"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.AlternationCount>4</ItemsControl.AlternationCount>
                            </ItemsControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                            </Grid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Grid.Row" Value="{Binding RelativeSource={RelativeSource Self}, Path=(ItemsControl.AlternationIndex)}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.AlternationCount>6</ItemsControl.AlternationCount>
                </ItemsControl>
            </Grid>

            <Grid Margin="5,19,186,437">


                <CheckBox Name="CheckBoxDigitGrouping"

                        Checked="CheckBoxDigitGrouping_Check"
                        Content="Digit Grouping"
                        Foreground="#FF20C20E"
                        HorizontalAlignment="Center"
                        Margin="0,2,0,2" Width="127"/>
            </Grid>


            <Grid Margin="5,120,5,299">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <TextBox Name="TextBoxResult" Grid.Row="1" Background="Black" FontSize="20" Foreground="#FF20C20E" BorderBrush="#FF20C20E" Grid.ColumnSpan="3" 
             TextAlignment="Right" Text="Result: " IsReadOnly="True"/>
                <TextBox Name="TextBoxCalculation" Background="Black"
             FontSize="20" Foreground="#FF20C20E" BorderBrush="#FF20C20E" Grid.ColumnSpan="3" TextAlignment="Right" IsReadOnly="True" Height="40" VerticalAlignment="Top"/>
            </Grid>


        </Grid>
    </DockPanel>
</Window>